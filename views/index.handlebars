<div id="home">
  <div class="container">
    <div class="row">
      <div class="col-sm-6">
        <p class="colHeading">Books I Want to Read</p>
        <h1>{{title}}</h1>
        {{#unless this.read}}
        <h2>Readit Project</h2>
        <form class="clearfix mb-4" action="/public/js/index.js?_method=PUT" method="POST">
          <div class="form-group">
            <!-- BOOK COLUMNS -->
            <label for="book-title">Title</label>
            <input type="text" id="book-title" class="form-control" aria-describedby="book-title"
              placeholder="Enter Title to Search">
          </div>
          <button type="submit">Search Title</button>
            <!-- adding a hidden input field named _method, with value PUT -->
            <input type="hidden" name="_method" value="PUT">
          </form>
          {{/unless}}
      </div>

      <div class="col-sm-6">
        <p class="colHeading">Books Read</p>
        {{title}}
        {{#if this.read}}
        <div class="booksread">
          <div>
            {{this.books_title}}. {{this.books_author}} {{this.books_genre}}
          </div>
        </div>
        {{/if}}
      </div>
    </div>
  </div>




  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <script src="/js/index.js"></script>