<div id="home">
  <div class="container">
    <div class="row">
      <div class="col-sm-6">
        <p class="colHeading">Books I Want to Read</p>
        <h1>{{title}}</h1> 
        {{#unless this.read}}
        <h2>Readit Project</h2>
        <form class="clearfix mb-4" action="POST">
          <div class="form-group">
            <!-- BOOK COLUMNS -->
            <label for="book-title">Title</label>
            <input type="text" id="book-title" class="form-control" aria-describedby="book-title"
              placeholder="Enter Title">
          </div>
          <div class="form-group">
            <label for="book-author">Author</label>
            <input type="text" id="book-author" class="form-control" aria-describedby="book-author"
              placeholder="Enter Author">
          </div>
          <div class="form-group">
            <label for="book-genre">Genre</label>
            <input type="text" id="book-genre" class="form-control" aria-describedby="book-genre"
              placeholder="Enter Genre">
          </div>
          <button id="submit" class="btn btn-primary float-right">Submit</button>
          </form>
          {{/unless}}
      <h3>Book Entered:</h3>
        <ul id="sumbmitted-list" class="list-group">
          {{#each book}}
          <li data-id="{{this.title}}" class="list-group-item">
            <a href="book/{{this.title}}">{{this.author}}{{this.genre}}</a>
            <button class="btn btn-danger float-right delete">ï½˜</button>
          </li>
          {{/each}}
          </ul>
          </div>
      <div class="col-sm-6">
        <p class="colHeading">Books Read</p>
        {{title}}
        {{#if this.read}}
        <div class="booksread">
          <div>
            {{this.title}}. {{this.author}} {{this.genre}}
          </div>
        </div>
        {{/if}}
      </div>
    </div>
  </div>




<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
