<div id="home">
  <div class="container">
    <div class="row">
      <div class="col-sm-6">
        
        <h1>{{title}}</h1>
        {{#unless this.read}}
        <h2>Readit Project</h2>
        <form class="clearfix mb-4" action="POST">
          <div class="form-group">
            <!-- BOOK COLUMNS -->
            <label for="book-title">Book Title</label>

            <input type="text" id="book-title" class="form-control" aria-describedby="book-title"
              placeholder="Enter Book Title">
          </div>
          <div class="form-group">
            <label for="book-author">Author</label>
            <input type="text" id="book-author" class="form-control" aria-describedby="book-author"
              placeholder="Enter Author">
          </div>
         <button id="submit" class="btn btn-primary float-right">Submit</button>
        </form>
        {{/unless}}
        <h3>Books I Want to Read:</h3>
        <ul id="sumbmitted-list" class="list-group">
          {{#each books}}
          <li data-id="{{this.title}}" class="list-group-item">
            <a href="book/{{this.title}}">{{this.title}}</a>
            <button class="btn btn-danger float-right delete">delete</button>
          </li>
          {{/each}}
        </ul>
      </div>
      <div class="col-sm-6">
        <p class="colHeading">Books I Have Read:</p>
        {{title}}
        {{#if this.read}}
        <div class="booksread">
          <div>
            {{this.title}} {{this.author}} {{this.summary}}
          </div>
        </div>
        {{/if}}
      </div>
    </div>
  </div>
</div>
{{!-- modal below --}}
<div class="modal" tabindex="-1" id="results" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Results of your search</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body" id='resContents'>
        
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
