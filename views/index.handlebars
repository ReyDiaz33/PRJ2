<div id="home">
  <div class="container">
    <div class="row">
      <div class="col-8 offset-2">
        <h1>{{msg}}</h1>
        <h2>Readit Project</h2>
        <form class="clearfix mb-4" action="POST">
          <div class="form-group"> <!-- BOOK COLUMNS -->
            <label for="book-title">Title</label>
            <input type="text" id="book-title" class="form-control" aria-describedby="book-title" placeholder="Enter Title">
          </div>
          <div class="form-group">
            <label for="book-author">Author</label>
            <input type="text" id="book-author" class="form-control" aria-describedby="book-author" placeholder="Enter Author">
          </div>
          <div class="form-group">
            <label for="example-description">Example Description</label>
            <textarea class="form-control" id="example-description" aria-describedby="example-description" placeholder="Enter Example Description"></textarea>
          </div>
          <button id="submit" class="btn btn-primary float-right">Submit</button>
        </form>
        <h3>Books:</h3>
        <ul id="book-list" class="list-group">
          {{#each books}}
          <li data-id="{{this.id}}" class="list-group-item">
            <a href="book/{{this.id}}">{{this.title}}</a>
            <button class="btn btn-danger float-right delete">ï½˜</button>
          </li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/index.js"></script>
